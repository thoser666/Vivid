# Fastfile
default_platform(:android)

platform :android do
  desc "Run all unit tests"
  lane :test do
    gradle(
      task: "testDebugUnitTest",
      flags: "--stacktrace --no-daemon"
    )
  end

  desc "Build debug APK"
  lane :build_debug do
    gradle(
      task: "assembleDebug",
      flags: "--stacktrace --no-daemon"
    )
  end

  desc "Build release APK"
  lane :build_release do
    gradle(
      task: "assembleRelease",
      flags: "--stacktrace --no-daemon"
    )
  end

  desc "Run tests and build debug"
  lane :ci_debug do
    test
    build_debug
  end

  desc "Run tests and build release"
  lane :ci_release do
    test
    build_release
  end
end